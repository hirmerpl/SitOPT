<?xml version="1.0" encoding="UTF-8"?>
<SituationTemplate id="A0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="situation_template_draft01.xsd"
	name="SystemObservation">
	<Situation id="A1" name="SystemFailure">
		<logicNode id="A2" name="AND (CPU and RAM sensor)">
			<parent parentID="A3"/>
			<type>and</type>
		</logicNode>
		<logicNode id="A3" name="OR (rootNode)">
			<type>or</type>
		</logicNode>
		<node id="A4" name="CPU high load">
			<type>type</type>
			<measureName>measureName</measureName>
			<opType>greaterThan</opType>
			<condValue value="70"/>
			<parent parentID="A2"/>
		</node>
		<node id="A8" name="RAM full">
			<type>type</type>
			<measureName>measureName</measureName>
			<opType>greaterThan</opType>
			<condValue value="90"/>
			<parent parentID="A2"/>
		</node>
		<sensorNode id="A5" name="memorySensor">
			<parent parentID="A8"></parent>
		</sensorNode>
		<sensorNode id="A6" name="cpuSensor">
			<parent parentID="A4"></parent>
		</sensorNode>
		<sensorNode id="A7" name ="watchdogSensor">
			<parent parentID="A3"/>
		</sensorNode>
	</Situation>
</SituationTemplate>
